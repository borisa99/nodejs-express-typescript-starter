{
  "name": "nodejs-express-starter",
  "version": "1.0.0",
  "description": "Starter project for scalable nodjes-express-typescript",
  "main": "/dist/index.js",
  "scripts": {
    "dev": "nodemon -e ts,js --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc",
    "start": "npm run build && node -r tsconfig-paths/register -r ts-node/register dist/index.js ",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "knex": "knex --knexfile src/database/knexfile.ts"
  },
  "author": "Borisa Krstic",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express-serve-static-core": "^4.17.24",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "knex": "^0.95.14",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.6",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  }
}
